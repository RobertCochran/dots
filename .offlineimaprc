# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = steevie

[Account steevie]
localrepository = Local
remoterepository = Remote
connections = 20
autorefresh = 15

[Repository Local]
type = Maildir
localfolders = ~/Maildir

[Repository Remote]
type = IMAP
ssl = yes
cert_fingerprint = cf2b993c53413ef20274e16a7ef7e0d2da21921ce734094e18f0fa51e7cd6654
remotehost = imap.strugee.net
remoteuser = alex@strugee.net
idlefolders = ['INBOX', 'GitHub', 'GNU.Libreplanet-us-wa']
folderfilter = lambda folder: not re.search('^virtual/', folder)

[mbnames]
enabled = yes
filename = ~/.mutt/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

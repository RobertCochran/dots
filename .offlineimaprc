# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = steevie

[Account steevie]
localrepository = Local
remoterepository = Remote
connections = 5

[Repository Local]
type = Maildir
localfolders = ~/Maildir

[Repository Remote]
type = IMAP
remotehost = imap.strugee.net
remoteuser = alex@strugee.net

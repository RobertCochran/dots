source ~/.mutt/muttrc.mailboxes

set mbox_type=Maildir
set folder=~/Maildir/INBOX
set spoolfile=+/
set header_cache=~/.cache/mutt
set record=~/Maildir/Sent
set postponed=~/Maildir/Drafts
set realname="Alex Jordan"
set from="Alex Jordan <alex@strugee.net>"

set envelope_from=yes
set sendmail="msmtp -oem -oi"

set editor="emacsclient -nw"

set sort="threads"
set sort_aux = last-date-received
set strict_threads=yes

source ~/.mutt/gpg.rc
set pgp_autosign=yes
set pgp_replyencrypt=yes
set pgp_replysignencrypted=yes
set pgp_sign_as=0x26794034633DBBC0
set pgp_ignore_subkeys=no

set pgp_verify_sig=yes
